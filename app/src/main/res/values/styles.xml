<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/Transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <!-- Style for the second activity -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CategoryLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onCategoryItemClick</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CategoryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="CategoryImageView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/round_category_bg</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="MoreFragmentLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>
    
    <style name="MoreFragmentTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
</resources>