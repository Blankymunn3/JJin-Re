<?xml version="1.0" encoding="utf-8"?>
<org.amphiaraus.roundedlayout.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:rlRoundBottomLeft="true"
    app:rlRoundBottomRight="true"
    app:rlRoundTopLeft="false"
    app:rlRoundTopRight="false"
    app:rlRoundedCornerRadius="30dp"
    app:rlRoundingElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBack">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.1"
            android:background="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</org.amphiaraus.roundedlayout.RoundedLayout>