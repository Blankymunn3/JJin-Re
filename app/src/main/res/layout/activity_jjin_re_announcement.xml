<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.jjin_re.features.announcement.AnnouncementViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_announcement"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:title="찐리 안내"
                app:titleTextColor="@color/colorWhite"
                app:navigationIcon="@drawable/ic_arr_back_white"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_version_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_gray_bottom_line"
                    android:padding="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/layout_to_inquire"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv_version_info_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14sp"
                        android:text="버전 정보"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_version_info"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_version_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.appVersion}"
                        app:layout_constraintStart_toEndOf="@+id/tv_version_info_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_to_inquire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_gray_bottom_line"
                    android:padding="20dp"
                    android:onClick="onToInquireClick"
                    android:foreground="?android:selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@+id/layout_version_info"
                    app:layout_constraintBottom_toTopOf="@+id/layout_terms_of_use"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv_to_inquire_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14sp"
                        android:text="문의하기"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_to_inquire"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_to_inquire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arr_next_black"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@+id/tv_to_inquire_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_terms_of_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_gray_bottom_line"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_to_inquire"
                    app:layout_constraintBottom_toTopOf="@+id/layout_privacy_policy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv_terms_of_use"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14sp"
                        android:text="이용약관"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_terms_of_use"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_terms_of_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arr_next_black"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@+id/tv_terms_of_use"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_gray_bottom_line"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_terms_of_use"
                    app:layout_constraintBottom_toTopOf="@+id/layout_open_source"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14sp"
                        android:text="개인정보 취급방침"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_privacy_policy"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arr_next_black"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@+id/tv_privacy_policy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_open_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_gray_bottom_line"
                    android:padding="20dp"
                    android:onClick="onOpenSourceClick"
                    app:layout_constraintTop_toBottomOf="@+id/layout_privacy_policy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv_open_source"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14sp"
                        android:text="오픈소스 라이센스"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_open_source"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_open_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arr_next_black"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@+id/tv_open_source"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>