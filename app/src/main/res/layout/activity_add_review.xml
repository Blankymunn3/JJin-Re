<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true">
    <data>
        <variable
            name="viewModel"
            type="io.kim_kong.jjin_re.features.add_review.AddReviewViewModel" />
    </data>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/layout_add_review_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_add_review"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="@color/colorWhite"
            app:navigationIcon="@drawable/ic_arr_back_white" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/et_add_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="제품명"
            android:text="@={viewModel.addReviewProductName}"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:singleLine="true"
            android:letterSpacing="-0.05"
            android:imeOptions="actionDone"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintBottom_toTopOf="@+id/bar_add_review_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/bar_add_review_title"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLine"
            app:layout_constraintTop_toBottomOf="@+id/et_add_review_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rv_add_review_photo"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_add_review_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2.5:1"
            app:layout_constraintTop_toBottomOf="@+id/bar_add_review_title"
            app:layout_constraintBottom_toTopOf="@+id/tv_add_review_photo_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_add_review_photo_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:letterSpacing="-0.05"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_add_review_photo"
            app:layout_constraintBottom_toTopOf="@+id/bar_add_review_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/bar_add_review_photo"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLine"
            app:layout_constraintBottom_toTopOf="@+id/layout_add_review_category"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_review_photo_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/layout_add_review_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/bar_add_review_photo"
            app:layout_constraintBottom_toTopOf="@+id/bar_add_review_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Spinner
                android:id="@+id/spinner_add_review_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toStartOf="@+id/et_add_review_category"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <EditText
                android:id="@+id/et_add_review_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:hint="기타 카테고리를 적어주세요."
                android:text="@={viewModel.addReviewEtcCategory}"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:maxLines="1"
                android:singleLine="true"
                android:letterSpacing="-0.05"
                android:includeFontPadding="false"
                android:inputType="textAutoComplete"
                app:layout_constraintStart_toEndOf="@+id/spinner_add_review_category"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <View
            android:id="@+id/bar_add_review_category"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLine"
            app:layout_constraintTop_toBottomOf="@+id/layout_add_review_category"
            app:layout_constraintBottom_toTopOf="@+id/layout_add_review_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add_review_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bar_add_review_category"
            app:layout_constraintBottom_toTopOf="@+id/bar_add_review_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.willy.ratingbar.RotationRatingBar
                android:id="@+id/rating_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:srb_clickable="true"
                app:srb_numStars="5"
                app:srb_rating="0"
                app:srb_scrollable="true"
                app:srb_stepSize="0.5"
                app:layout_constraintEnd_toStartOf="@+id/tv_add_review_product_rating"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_add_review_product_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:text="@{viewModel.addReviewProductRating}"
                app:layout_constraintStart_toEndOf="@+id/rating_add_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/bar_add_review_rating"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLine"
            app:layout_constraintBottom_toTopOf="@+id/et_add_review_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_add_review_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/et_add_review_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:letterSpacing="-0.05"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="16sp"
            android:gravity="start|top"
            android:hint="@string/str_add_review_hint"
            app:layout_constraintTop_toBottomOf="@+id/bar_add_review_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>